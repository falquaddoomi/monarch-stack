# this Makefile is similar to the previous one, but it assumes the following:
# 1) the disk(s) are empty initially, so no backing up of old data is necessary
# 2) the disk(s) are sized to the *extracted* size of the data
# 3) the archives are stored in $TMPDIR rather than alongside the extracted data
#    during extraction

MAKEFLAGS += --warn-undefined-variables
MAKEFLAGS += --no-builtin-rules
MAKEFLAGS += --no-builtin-variables

# Monarch release versions
ARCHIVE ?= https://data-test.monarchinitiative.org/monarch/202109
UI_RELEASE ?= https://github.com/monarch-initiative/monarch-ui/releases/latest/download/static-assets.tar.gz

DATADIR ?= ./data
TMPDIR ?= /tmp
MONARCH_GID ?= 14728
SOLR_GID ?= 8983


WGET = /usr/bin/wget --timestamping --no-verbose

SOLR = $(TMPDIR)/solr.tgz

OWLSIM_FILES = \
	$(DATADIR)/owlsim/all.owl \
	$(DATADIR)/owlsim/owlsim.cache \
	$(DATADIR)/owlsim/ic-cache.owl

SCIGRAPH_DATA = $(TMPDIR)/scigraph.tgz

SCIGRAPH_ONTOLOGY = $(TMPDIR)/scigraph-ontology.tgz

DATA_CONF = $(DATADIR)/scigraph-data/conf/scigraph-data.yaml

ONTOLOGY_CONF = $(DATADIR)/scigraph-ontology/conf/scigraph-ontology.yaml

MONARCH_UI = $(TMPDIR)/static-assets.tar.gz

DATA_GRAPH = $(DATADIR)/scigraph-data/graph

ONTOLOGY_GRAPH = $(DATADIR)/scigraph-ontology/graph

SOLR_DATA = $(DATADIR)/solr/data

MONARCH_UI_DIST = $(DATADIR)/monarch-ui/dist


.PHONY: fetch_scigraph_ontology fetch_scigraph_data fetch_solr fetch_ui fetch_owlsim list

list:
	@LC_ALL=C $(MAKE) -pRrq -f $(lastword $(MAKEFILE_LIST)) : 2>/dev/null | awk -v RS= -F: '/^# File/,/^# Finished Make data base/ {if ($$1 !~ "^[#.]") {print $$1}}' | sort | egrep -v -e '^[^[:alnum:]]' -e '^$@$$'


all: fetch_scigraph_ontology fetch_scigraph_data fetch_solr fetch_ui fetch_owlsim

fetch_scigraph_ontology: $(ONTOLOGY_GRAPH) $(ONTOLOGY_CONF)

fetch_scigraph_data: $(DATA_GRAPH) $(DATA_CONF)

fetch_solr: $(SOLR_DATA)

fetch_ui: $(MONARCH_UI_DIST)

fetch_owlsim: $(OWLSIM_FILES)


$(SCIGRAPH_DATA):
	cd $(TMPDIR) && $(WGET) $(ARCHIVE)/scigraph.tgz
	chgrp $(MONARCH_GID) $@

$(SCIGRAPH_ONTOLOGY):
	cd $(TMPDIR) && $(WGET) $(ARCHIVE)/scigraph-ontology.tgz
	chgrp $(MONARCH_GID) $@

$(SOLR):
	cd $(TMPDIR) && $(WGET) $(ARCHIVE)/solr.tgz
	chgrp $(MONARCH_GID) $@

$(MONARCH_UI):
	cd $(DATADIR) && $(WGET) $(UI_RELEASE)
	chgrp $(MONARCH_GID) $@

$(OWLSIM_FILES):
	mkdir --parents $(TMPDIR)/owlsim
	cd $(TMPDIR)/owlsim && $(WGET) $(ARCHIVE)/owlsim/all.owl
	cd $(TMPDIR)/owlsim && $(WGET) $(ARCHIVE)/owlsim/ic-cache.owl
	cd $(TMPDIR)/owlsim && $(WGET) $(ARCHIVE)/owlsim/owlsim.cache
	chgrp --recursive $(MONARCH_GID) $(TMPDIR)/owlsim
	mv $(TMPDIR)/owlsim/* $(DATADIR)/owlsim
	rm -rf $(TMPDIR)/owlsim

$(DATA_GRAPH): $(SCIGRAPH_DATA)
	mkdir --parents $(DATADIR)/scigraph-data/data
	tar -I pigz -xf $(SCIGRAPH_DATA) --no-same-owner --directory $(DATADIR)/scigraph-data/data
	chgrp --recursive $(MONARCH_GID) $(DATADIR)/scigraph-data
	chmod --recursive g+w $(DATADIR)/scigraph-data

$(ONTOLOGY_GRAPH): $(SCIGRAPH_ONTOLOGY)
	mkdir --parents $(DATADIR)/scigraph-ontology/data
	tar -I pigz -xf $(SCIGRAPH_ONTOLOGY) --no-same-owner --directory $(DATADIR)/scigraph-ontology/data
	chgrp --recursive $(MONARCH_GID) $(DATADIR)/scigraph-ontology
	chmod --recursive g+w $(DATADIR)/scigraph-ontology

$(DATA_CONF): | $(DATA_GRAPH)
	mkdir --parents $(DATADIR)/scigraph-data/conf
	cd $(DATADIR)/scigraph-data/conf && $(WGET) $(ARCHIVE)/conf/scigraph-data.yaml
	chgrp --recursive $(MONARCH_GID) $(DATADIR)/scigraph-data/conf

$(ONTOLOGY_CONF): | $(ONTOLOGY_GRAPH)
	mkdir --parents $(DATADIR)/scigraph-ontology/conf
	cd $(DATADIR)/scigraph-ontology/conf && $(WGET) $(ARCHIVE)/conf/scigraph-ontology.yaml
	chgrp --recursive $(MONARCH_GID) $(DATADIR)/scigraph-ontology/conf

$(SOLR_DATA): $(SOLR)
	mkdir --parents $(DATADIR)/solr
	tar -I pigz -xf $(SOLR) --no-same-owner --directory $(DATADIR)/solr
	chgrp --recursive $(SOLR_GID) $(DATADIR)/solr
	chmod --recursive g+w $(DATADIR)/solr

$(MONARCH_UI_DIST): $(MONARCH_UI)
	mkdir --parents $(DATADIR)/monarch-ui
	tar -I pigz -xf $(MONARCH_UI) --no-same-owner --directory $(DATADIR)/monarch-ui
	chgrp --recursive $(MONARCH_GID) $(DATADIR)/monarch-ui
	chmod --recursive g+w $(DATADIR)/monarch-ui
